<?xml version="1.0" encoding="UTF-8"?>
<phpdocumentor
  configVersion="3"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="https://www.phpdoc.org"
  xsi:noNamespaceSchemaLocation="https://docs.phpdoc.org/latest/phpdoc.xsd"
>
  <paths>
    <output>docs</output>
    <cache>/tmp/.phpdoc/build/cache</cache>
  </paths>
  <version number="5.0.0">
    <api ignore-packages="true" format="php">
      <source dsn="./src"></source>
      <output>api</output>
      <ignore hidden="true" symlinks="true">
        <path>tests/**/*</path>
        <path>vendor/**/*</path>
      </ignore>
      <default-package-name>PhpolarStorage</default-package-name>
      <visibility>public</visibility>
      <ignore-tags>
        <ignore-tag>template</ignore-tag>
        <ignore-tag>template-extends</ignore-tag>
        <ignore-tag>template-implements</ignore-tag>
        <ignore-tag>extends</ignore-tag>
        <ignore-tag>implements</ignore-tag>
      </ignore-tags>
    </api>
  </version>
  <setting name="graphs.enabled" value="true" />
  <setting name="guides.enabled" value="true" />
</phpdocumentor>
